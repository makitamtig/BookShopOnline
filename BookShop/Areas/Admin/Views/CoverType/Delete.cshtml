    <input asp-for="Id" hidden/>

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete CoverType</h2>
            <hr />
        </div>
        @* <div asp-validation-summary="All"></div>*@
       

