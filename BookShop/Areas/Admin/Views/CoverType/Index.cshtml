@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}




<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">CoverType</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CoverType" asp-action="Create" class="btn btn-dark">
                <i class="bi bi-plus-circle"></i>  &nbsp;   Create New CoverType
            </a>

        </div>
    </div>

    <br /> <br />

    <table class="table-bordered table-striped" style="width:100%">
        <thead>

            <tr>
             
                <th>
                    CoverType Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="80%">
                        @obj.Name
                    </td>
                    
                    <td>


                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-dark mx-2"> <i class="bi bi-pencil-square">  </i>Edit</a>

                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-dark mx-2"> <i class="bi bi-trash">  </i>Delete</a>
                            </div>
                        </div>



                    </td>
                </tr>

            }

        </tbody>

    </table>
</div>